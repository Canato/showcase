<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_app"
    app:startDestination="@id/home_dest"
    tools:ignore="UnusedNavigation">

    <fragment
        android:id="@+id/home_dest"
        android:name="com.can_apps.home_list.HomeFragment"
        android:label="@string/home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_home_dest_to_rank_dest"
            app:destination="@id/rank_dest"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/rank_dest"
        android:name="com.can_apps.rank_board.app.RankFragment"
        android:label="@string/rank_title"
        tools:layout="@layout/fragment_rank" />

</navigation>